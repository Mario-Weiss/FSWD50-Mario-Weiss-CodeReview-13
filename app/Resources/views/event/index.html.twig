{% extends 'base.html.twig' %}

{% block body %}
<div class="col-12 text-center text-red p-3"><h1>Events</h1></div>
<div class="col-12 card">
	<div class="card-body">
		{% for flashMessage in app.session.flashbag.get('notice') %}
		<div class="alert alert-success">{{flashMessage}}</div>
		{% endfor %}
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Event Name</th>
					<th>Category</th>
					<th>Day</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for event in events %}
				<tr>
					<td>{{event.name}}</td>
					<td>{{event.category.name}}</td>
					<td>{{event.day|date('F j, Y, g:i a')}}</td>
					<td>
						<a class="btn btn-primary" href="/event/edit/{{event.id}}" title="">Edit</a>
						<a class="btn btn-danger" href="/event/delete/{{event.id}}" title="">Delete</a>

					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>

{% endblock %} 
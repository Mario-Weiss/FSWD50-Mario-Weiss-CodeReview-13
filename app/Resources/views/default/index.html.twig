{% extends 'base.html.twig' %}

{% block body %}
<div class="col-12 text-center text-red p-3"><h1>Events in Vienna</h1></div>
{% for event in events %} 
<div class="col-12 col-md-6 col-lg-4 col-xl-3 p-3 d-block d-md-flex">
	<a href="/event/detail/{{event.id}}">
	<div class="card text-center {{event.category.name}}">
		<img class="card-img-top d-none d-sm-block" src="/../img/{{event.image}} " alt="{{event.name}}">
		<div class="card-body">
			<h5 class="card-title text-red">{{event.name}}</h5>
			<p class="lead">{{event.category.name}}</p>
			<p class="card-text">{{event.locationName}}</p>
		</div>
	</div>
	</a>
</div>

{% endfor %}   
{% endblock %}

{% block stylesheets %}

{% endblock %}